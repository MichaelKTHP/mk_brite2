

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(@user) do |f|  %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Courriel" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

   <div class="field">
    <%= f.label "PrÃ©nom" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label "Nom de famille" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label "Description" %><br />
    <%= f.text_field :description, autofocus: true, autocomplete: "description" %>
  </div>


  <div class="field">
    <%= f.label "Mot de passe" %> <i>(Laisser vide si vous ne souhaitez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Confirmation du mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>



