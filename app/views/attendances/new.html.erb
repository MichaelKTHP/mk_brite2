<p> Une place pour l'évenement "<%= @event_name%>" </p>


<%= form_tag event_charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Prix : <%= @amount%> €</span>
    </label>
  </article>
  </br>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description='Une place pour "<%= @event_name%> "'
          data-label="Payer par carte"
          data-amount= "<%= @amount * 100 %>"
          data-locale= "fr"
          data-currency="eur">
          </script>

<% end %>